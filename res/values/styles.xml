<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Style for tabs people text -->
    <style name="headerPeopleText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:textColor">@color/textTitle</item>
    </style>

    <style name="TitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/textTitle</item>
    </style>

    <style name="AboutTitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26dp</item>
        <item name="android:textColor">@color/textTitleAbout</item>
    </style>

    <style name="AboutText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/textTitleAbout</item>
    </style>

</resources>
